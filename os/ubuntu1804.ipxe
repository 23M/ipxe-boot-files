#!ipxe

cpuid --ext 29

set arch amd64
set dist bionic

set base http://mirror.23m.com/ubuntu/dists/${dist}-updates/main/installer-${arch}/current/images/netboot/ubuntu-installer/${arch}
set firmware http://cdimage.debian.org/cdimage/unofficial/non-free/firmware/stable/current

kernel ${base}/linux linitrd=initrd.gz linitrd=firmware.cpio.gz locale=en_US.UTF-8 interface=auto ip=dhcp --
initrd ${base}/initrd.gz
initrd ${firmware}/firmware.cpio.gz
boot
